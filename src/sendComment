import add from './addcomment'

export default  (submitBtn,userName,userMessage) => {
submitBtn.addEventListener('click', async (e) => {
  e.preventDefault();
  console.log('test');
  const messageData = {
    user: userName.value,
    message: userMessage.value,
  };
  const messageAdded = await add(messageData);
  if (messageAdded) {
    return "comment added";
  }
});
}

